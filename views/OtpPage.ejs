<%- include('layouts/header.ejs') %>
<div class="container-fluid h-100">
    <div class="row justify-content-center h-100">
        <div class="col-md-4 col-xl-3 chat">
            <div class="card mb-sm-3 mb-md-0 ">
                <div class="card-header">
                  Reset Password
                </div>
                <div class="card-body contacts_body">
                    <div class="card-body">
                            <div class="login-box">
                                <img src="https://blog.wildix.com/wp-content/uploads/2016/11/webrtc-logo-vert-retro-255x305-1.png" alt="Webrtc Logo" class="logo">
                                <form action="/OtpPage" method="POST">

                                    <input type="hidden" class="text" id="email" name="email" value=<%= email %>>
                                    
                                    <label for="otp">OTP:</label>
                                    <input required type="text" class="text" id="otp" name="otp">
                                   
                                    <label for="password">Password</label>
                                    <input required type="password" class="text" id="password" name="password">
                                
                                    <label for="password">Confirm Password:</label>
                                    <input required type="password" class="text" id="password2" name="password2">
                        

                                    <button type="submit">Update</button>
                                </form>
                    </div>
                </div>
                <div class="card-footer">
                    <% if(typeof message !== 'undefined'){   %>
                        <p style="color:red;"><%= message %></p>
                    <%}%>  
                    
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layouts/footer.ejs') %>